{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "strictNullChecks": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "files": ["src/index.ts"],
  "includes": ["./src/**/*.ts"]
}
